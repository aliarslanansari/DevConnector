{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "no-debugger": "warn",
    "comma-dangle": 1,
    "no-undef": "warn",
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "no-unused-vars": "warn",
    "react/no-unescaped-entities": 0,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      },
      { "usePrettierrc": true }
    ]
  }
}
